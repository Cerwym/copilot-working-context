# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Indentation settings for various file types
[*.{js,ts,json,md,yml,yaml,html,css,scss}]
indent_style = space
indent_size = 2

[*.{py,php,rb,go,rs,c,cpp,h,hpp,java,kt,swift,sql}]
indent_style = space
indent_size = 4

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf

# Makefiles always use tabs
[Makefile]
indent_style = tab

# Package files
[package.json]
indent_style = space
indent_size = 2
